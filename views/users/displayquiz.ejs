<%- include("../partials/dashboardheader.ejs") %> <%-
include("../partials/dashboardcss.ejs") %> <%-
include("../partials/admin/displayquizcss.ejs") %> <%-
include("../partials/usernavbar.ejs") %>

<main class="main">
  <head>
    <style>
      .quiz-container {
      max-width: 1000px;

      }
    </style>
  </head>
  <div
    id="data-container"
    data-ejs-data="<%= JSON.stringify(questions) %>"
  ></div>
  <div class="quiz-container">
    <div class="quiz-header">
      <h1>Quiz</h1>
      <div class="timer">
        Time Left: <span id="timer"><%= timeLimit %></span>
      </div>
    </div>
    <div class="quiz-body">
      <div id="question-container">
        <h2 id="question"></h2>
        <ul id="options" class="options-list">
          <!-- Options will be inserted here dynamically -->
        </ul>
      </div>
      <div class="button-container">
        <button id="prev-button" onclick="prevQuestion()">Prev</button>
        <button id="next-button" onclick="nextQuestion()">Next</button>
      </div>
    </div>
    <div class="quiz-footer">
      <form action="/users/displayquiz" method="POST">
        <button id="submit-button" onclick="submitQuiz()">Submit</button>
        <input
          style="border: none; display: none"
          id="result"
          class="result"
          name="result"
          type="text"
        />
      </form>
    </div>
  </div>

  <script src="/js/displayquiz.js"></script>
</main>

<%- include("../partials/dashboardjs.ejs") %> <%-
include("../partials/footer.ejs") %>
